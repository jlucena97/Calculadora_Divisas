<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ejercicio.jlm.calculadora_divisas.MainActivity"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100px"/>

            <ImageView android:background="@drawable/europa"
                android:layout_width="150px"
                android:layout_height="100px"
                android:layout_marginLeft="10px"/>

            <ImageView android:background="@drawable/inglaterra"
                android:layout_width="150px"
                android:layout_height="100px"
                android:layout_marginLeft="10px"/>

            <ImageView android:background="@drawable/eeuu"
                android:layout_width="150px"
                android:layout_height="100px"
                android:layout_marginLeft="10px"/>

            <ImageView android:background="@drawable/china"
                android:layout_width="150px"
                android:layout_height="100px"
                android:layout_marginLeft="10px"/>

        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:background="@drawable/europa"
                android:layout_width="150px"
                android:layout_height="100px"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="1"
                android:id="@+id/euro"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="1.135"
                android:id="@+id/eurolibra"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="0.848"
                android:id="@+id/eurodolar"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="0.128"
                android:id="@+id/euroyuan"
                android:textAlignment="center"/>

        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:background="@drawable/inglaterra"
                android:layout_width="150px"
                android:layout_height="100px"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="0.880"
                android:id="@+id/libraeuro"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="150px"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="1"
                android:id="@+id/libra"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="0.746"
                android:id="@+id/libradolar"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="0.112"
                android:id="@+id/lbrayuan"
                android:textAlignment="center"/>

        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:background="@drawable/eeuu"
                android:layout_width="150px"
                android:layout_height="100px"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="1.179"
                android:id="@+id/dolareuro"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="1.338"
                android:id="@+id/dolarlibra"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="1"
                android:id="@+id/dolar"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_marginLeft="20px"
                android:text="0.15"
                android:id="@+id/dolaryuan"
                android:textAlignment="center"/>

        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:background="@drawable/china"
                android:layout_width="150px"
                android:layout_height="100px"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="7.803"
                android:id="@+id/yuaneuro"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="8.858"
                android:id="@+id/yuanlibra"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="6.61"
                android:id="@+id/yuandolar"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="1"
                android:id="@+id/yuan"
                android:textAlignment="center"/>

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/enviar"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:text="Enviar" />
        </TableRow>

    </TableLayout>

</LinearLayout>

